<div class="entry mt-4">
  {{#if productos}}
  <div class="  p-1 border border-dark border-3 rounded">
    <table class="  table table-resposive ">
      <thead class="thead-dark text-light bg-primary">
        <tr>
          <th scope="col">nombre y apellido</th>
          <th scope="col">id</th>
          <th scope="col">Email</th>
          <th scope="col">Rol</th>
          <th scope="col">Cambiar a premium</th>
          <th scope="col">Cambiar a usuario</th>
          <th scope="col">Borrar</th>
        </tr>
      </thead>
      <tbody id="prodDisplay">
        {{#each productos}}
        <tr class="table">
          <th>{{ first_name }} {{ last_name }}</th>
          <td>{{ this._id }}</td>
          <td>{{ this.email }}</td>
          <td>{{ this.rol }}</td>
          <td> <a href="" class="btn btn-primary premiumButton" data-cart-id="{{ this._id }}">premium</a></td>
          <td> <a href="" class="btn btn-primary userButton" data-cart-id="{{ this._id }}">user</a></td>
          <td> <a href="" class="btn btn-primary deleteButton" data-cart-id="{{ this._id }}">eliminar</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <br>
    <h3> No hay ning√∫n producto agregado. </h3>
    {{/if}}
  </div>
</div>

<script src="/js/userActions.js"></script>